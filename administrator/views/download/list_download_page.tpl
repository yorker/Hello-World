<{if !empty($list)}><table class="adminlist" cellspacing="1"><thead>	<tr>		<th width="30"><input type="checkbox" onclick="checkAll(this, 'chkflag')"/></th>		<th><{$lang.name}></th>		<th><{$lang.category}></th>					<th><{$lang.filesize}></th>		<th><{$lang.type}></th>		<th width="50"><{$lang.detail}></th>		<th width="50"><{$lang.ordering}></th>		<th width="30"><{$lang.published}></th>		<th width="80"><{$lang.operation}></th>	</tr></thead><tbody>	<{foreach from=$list item="itm" name="fname"}>	<tr class="row<{$smarty.foreach.fname.iteration%2}>">		<td align="center"><input type="checkbox" name="cid" value="<{$itm.id}>" class="chkflag"/></td>		<td>			<div class="dyna_edit" onclick="loadEdit(this, 'download', 'name', '<{$itm.id}>')"><{$itm.name}></div>		</td>		<td align="center"><{$itm.cat_name}></td>					<td align="center"><{$itm.filesize}></td>		<td align="center"><{$itm.file_type}></td>		<td align="center">			<{if $itm.description}>				<{tb_inline label=$lang.view detail=$itm.description title=$itm.name}>			<{else}>				--			<{/if}>		</td>					<td align="center"><div class="dyna_edit" onclick="loadEdit(this, 'download', 'ordering', '<{$itm.id}>', '1')"><{$itm.ordering}></div></td>		<td align="center"><{admin_switcher t='download' f='published' id=$itm.id value=$itm.published}></td>		<td align="center">			<{admin_edit href='download/writeDownload'|app_url id=$itm.id}>			<{admin_delete t='download' id=$itm.id image='path' url='download/listDownload?cat_id='|cat:$cat_id|app_url}>			<a title="<{$lang.download}>" href="<{app_url url='download/getDownload?id='|cat:$itm.id}>" target="_blank"><img src="images/icon_download.jpg" border="0"/></a>		</td>	</tr>	<{/foreach}></tbody><tfoot>	<tr>		<td colspan="9">			<div class="clearfix">				<div class="fl">					<input type="button" value="<{$lang.delete}>" class="btn" onclick="batchDeleteByCheckbox('download', 'chkflag', '<{app_url url='download/listDownload?cat_id='|cat:$cat_id}>', '', 'path')"/>				</div>				<div class="fr"><{$pages}></div>			</div>		</td>	</tr></tfoot></table><{else}>	<div class="no_data"><{$lang.no_data}></div><{/if}>