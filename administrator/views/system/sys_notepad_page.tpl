<{if !empty($list)}>	<table class="notepad_list" cellspacing="0">		<{foreach from=$list item="itm"}>		<tr class="ho" valign="top">			<td width="40" align="center"><input type="checkbox" class="chkflag" name="cid" value="<{$itm.id}>"/></td>			<td>				<div class="clearfix">					<div class="fl">						<a href="javascript:void(0)" onclick="view_note('shownote_<{$itm.id}>')"><span id="ntit_<{$itm.id}>"><{$itm.title}></span> <{if $itm.is_urgency>0}><img src="images/star.jpg" border="0" title="<{$lang.urgency}>"/><{/if}></a>					</div>					<div class="fr">						<a href="javascript:void(0)" onclick="view_note('shownote_<{$itm.id}>')"><{$lang.view}></a>&nbsp;						<a href="system#nform" onclick="if(confirm('<{$lang.confirm_edit}>')) {editNotepad('<{$itm.id}>', '<{$itm.is_urgency}>', KE)} else {return false;}"><{$lang.edit}></a>&nbsp;						<a href="javascript:void(0)" onclick="if(confirm('<{$lang.confirm_delete}>')) deleteById('admin_notepad', '<{$itm.id}>', '<{app_url url='system/sysNotepad'}>')"><{$lang.delete}></a>					</div>				</div>				<div id="shownote_<{$itm.id}>" style="display:none" class="note_content">					<div id="ncont_<{$itm.id}>"><{$itm.content}></div>					<p class="last_update"><{$lang.last_update}> <{$itm.update_datetime}></p>				</div>			</td>		</tr>		<{/foreach}>		<tr>			<td align="center"><input type="checkbox" onclick="checkAll(this, 'chkflag')" title="<{$lang.check_all_none}>"/></td>							<td colspan="3" align="right">				<div class="clearfix">					<div class="fl"><input type="button" class="btn" value="<{$lang.delete}>" onclick="batchDeleteByCheckbox('admin_notepad', 'chkflag', '<{app_url url='system/sysNotepad'}>')"/></div>					<div class="fr"><{$pages}></div>				</div>								</td>		</tr>	</table><{else}>	<div class="no_data"><{$lang.no_data}></div><{/if}>